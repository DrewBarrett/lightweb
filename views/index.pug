extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='/set', method='POST')
    input(type="range" name="r" min="0" max="255" value=`${r}`)
    input(type="range" name="g" min="0" max="255" value=`${g}`)
    input(type="range" name="b" min="0" max="255" value=`${b}`)
    input(type="range" name="w" min="0" max="255" value=`${w}`)
    input(type="submit")
